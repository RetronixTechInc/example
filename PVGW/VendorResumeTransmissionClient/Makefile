TOP := $(shell pwd)

# -----------------------------------------------------------------------------
# compiler
# -----------------------------------------------------------------------------
CC      = $(CROSS_COMPILE)g++
LD      = $(CROSS_COMPILE)g++
SIZE    = $(CROSS_COMPILE)size
NM      = $(CROSS_COMPILE)nm
AR      = $(CROSS_COMPILE)ar
OBJDUMP = $(CROSS_COMPILE)objdump
OBJCOPY = $(CROSS_COMPILE)objcopy
RM      = rm

# -----------------------------------------------------------------------------
# 通用參數
# -----------------------------------------------------------------------------
COMMON_FLAGS += -O0 -g3 -Wall -c -fmessage-length=0 -fpermissive -MMD -MP -MF"$(@:%.o=%.d)" -MT"$(@)"

# -----------------------------------------------------------------------------
# Include files
# -----------------------------------------------------------------------------


# -----------------------------------------------------------------------------
# CFLAGS
# -----------------------------------------------------------------------------
CFLAGS   = $(COMMON_FLAGS)
CFLAGS   += $(INCLUDE_FLAGS)

# -----------------------------------------------------------------------------
# LDFLAGS
# -----------------------------------------------------------------------------
LDFLAGS = 

# -----------------------------------------------------------------------------
# LIBS
# -----------------------------------------------------------------------------


# -----------------------------------------------------------------------------
# Target name
# -----------------------------------------------------------------------------
TARGET  = SocketClient

all:bin

PATHLIST = .


OBJS += o/main.o

./o/%.o : ./%.cpp
	$(CC) -c $(CFLAGS) $< -o $@

link:$(OBJS)
	$(LD) $(LDFLAGS) $(OBJS) $(LIBS) -o o/$(TARGET)
	
path:
	for mkobjpath in $(PATHLIST) ; do \
		mkdir -p $$mkobjpath/o ; \
    done

bin:path link  

clean:
	for mkobjpath in $(PATHLIST) ; do \
		$(RM) -rf $$mkobjpath/o ; \
    done
